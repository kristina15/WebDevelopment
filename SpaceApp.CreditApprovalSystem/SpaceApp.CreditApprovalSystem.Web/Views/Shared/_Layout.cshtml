<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Creadit approval system</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
    <script>
        var $form
    </script>
</head>
<body style="padding-top:0px">
    <nav class="navbar navbar-dark bg-dark">
        <div id="login-view" data-url="@Url.Action("LoginBlock", "Account")"></div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
            (function () {
                var url = $("#login-view").data("url");
                $("#login-view").load(url);
            })();
        });

        var CFG = {
            saveLoansUrl: '@Url.Action("SaveLoans", "LoanApi")',
            createLoanUrl: '@Url.Action("CreateLoan", "LoanApi")',
            deleteUrl: '@Url.Action("DeleteLoan", "LoanApi")',
            deleteNewLoanUrl: '@Url.Action("DeleteNewLoan", "LoanApi")',
            updateStatus: '@Url.Action("UpdateStatus", "LoanApi")',
            addRole: '@Url.Action("AddRole", "LoanApi")',
        }
    </script>

    @RenderSection("scripts", required: false);
</body>
</html>
